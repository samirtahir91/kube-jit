{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "properties": {
        "oauth": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["google", "github"],
              "description": "The OAuth provider to use. Must be either 'google' or 'github'."
            },
            "clientID": {
              "type": "string",
              "description": "The client ID for the OAuth provider."
            },
            "redirectUrl": {
              "type": "string",
              "description": "The redirect URL for the OAuth provider."
            },
            "clientSecretKeyRef": {
              "type": "string",
              "description": "The secret key reference for the OAuth provider's client secret."
            }
          },
          "required": ["provider", "clientID", "redirectUrl", "clientSecretKeyRef"]
        }
      }
    }
  },
  "required": ["config"]
}